<div class="container d-flex justify-content-center">
  <div class="row">
    <div style="width: 100%; max-width: 800px;">
      <h1 class="mb-3 mt-3 text-start">User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being<br>
        saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="mb-2 text-start">
          <label for="inputName">Name</label>
          <%= f.text_field :name, class: "form-control", style: "width: 100%" %>
        </div>
        <div class="mb-3 text-start">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="mb-3 text-start">
          <label for="inputIntro">Introduction</label>
          <%= f.text_area :introduction, class: "form-control", style: "width: 100%" %>
        </div>
        <div class="mb-3 text-start">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
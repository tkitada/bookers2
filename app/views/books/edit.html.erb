<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="mx-auto" style="width: 100%; max-width: 1500px;">
      <h2 class="mb-3 mt-3 text-start">Editing Book</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this obj from being<br>
        saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="mb-2 text-start">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, class: "form-control w-100" %>
        </div>
        <div class="mb-3 text-start">
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, class: "form-control w-100" %>
        </div>
        <div class="mb-3 text-start">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <div>
        <span class="me-0">
          <%= link_to "Show", book_path(@book.id) %>
        </span>
        <span class="divider px-2">|</span>
        <span class="ms-o">
          <%= link_to "Back", books_path %>
        </span>
      </div>
    </div>
  </div>
</div>
